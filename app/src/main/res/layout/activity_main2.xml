<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
tools:context=".ejercicio2.MainActivity2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasa de cambio:"
            android:textSize="22dp"
            />

        <TextView
            android:id="@+id/txtTasaCambio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0"
            android:textSize="22dp"
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/edtCantidad"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Ingrese cantidad"
        android:inputType="numberDecimal"
        android:textSize="22dp"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbDolarAEuro"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:checked="true"
            android:text="Dólar → Euro"
            android:textSize="18dp"
            />

        <RadioButton
            android:layout_marginHorizontal="50dp"
            android:id="@+id/rbEuroADolar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Euro → Dólar"
            android:textSize="18dp"

            />

    </RadioGroup>


    <Button
        android:layout_marginVertical="20dp"
        android:id="@+id/btnConvertir"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Convertir"
        android:textSize="22dp"
        />

    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado:"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="23dp"
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>





</LinearLayout>
